{% extends 'base.html.twig' %}
{% set title = 'Events List' %}

{% block main %}
<section id="eventsList">
    <div class="card shadow">
        <div class="card-body">
            <h4 class="pb-4 text-center">Events List</h4>
            <button id="newEvent" class="btn btn-outline-success btn-block">Add New Event</button>

            <form id="addEventForm" class="text-left fadeIn d-none" novalidate>
                <div id="event" class="form-label-group">
                    <input id="e-name" class="form-control" type="text" maxlength="100" placeholder="Event Name" name="event" autofocus required />
                    <label for="e-name">Event Name</label>
                    <div class="feedback invalid-feedback fadeIn"></div>
                </div>

                <div id="location" class="form-label-group">
                    <input id="e-location" class="form-control" type="text" maxlength="100" placeholder="Location" name="location" required />
                    <label for="e-location">Location</label>
                    <div class="feedback invalid-feedback fadeIn"></div>
                </div>

                <div id="date" class="form-label-group">
                    <input id="e-date" class="form-control" type="date" placeholder="Date" name="date" required />
                    <label for="e-date">Date</label>
                    <div class="feedback invalid-feedback fadeIn"></div>
                </div>

                <div id="time" class="form-label-group">
                    <input id="e-time" class="form-control" type="time" placeholder="Time" name="time" required />
                    <label for="e-time">Time</label>
                    <div class="feedback invalid-feedback fadeIn"></div>
                </div>

                <button type="submit" class="btn btn-success btn-block">
                    Publish Event
                </button>
            </form>
            <hr />
            <div id="events-table">
                <h6 class="text-muted text-center">You have not published any events yet.</h6>
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block afterMain %}
<div id="distributeModal" class="modal pulse" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    How would you like to distribute EcoPoints to your participants?
                </h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="far fa-times"></i>
                </button>
            </div>

            <div class="modal-footer row">
                <div class="col-12 mx-0 mt-0 mb-2">
                    <a  class="btn btn-primary btn-block" href="./display_code">
                        Event Code and QR Code
                    </a>
                </div>
                <div class="col-12 mx-0 mt-0">
                    <a class="btn btn-outline-secondary btn-block" href="./attendance">
                        Manual Attendance
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script type="text/javascript" src="./assets/js/eventsList.js"></script>
{% endblock %}
