{% extends "base.html.twig" %}
{% set title = 'Redeemed History' %}

{% block main %}
<section id="redeemedHistories">
    <div class="card shadow mb-3">
        <div class="card-body">
            <h4 class="pb-3 text-center">Redeemed History</h4>

            <div id="redeem-history-table">
                <h6 class="text-muted text-center">You have not redeemed any rewards yet.</h6>
            </div>
        </div>
    </div>

    <p class="font-weight-bold small text-center text-muted">
        End of Redeemed History
    </p>
</section>
{% endblock %}

{% block afterMain %}
<div id="view-more-modal" class="modal pulse" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="far fa-times"></i>
                </button>
            </div>

            <div class="modal-body"></div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger btn-block" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script type="text/javascript" src="./assets/js/redeemedHistories.js"></script>
{% endblock %}
