{% extends "base.html.twig" %}
{% set title = 'Friends' %}

{% block main %}
<section id="friendsList">
    <div class="card text-center shadow-lg">
        <div class="card-header">
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item flex-fill">
                    <a class="nav-link active" href="#friends" data-toggle="tab">Friends</a>
                </li>
                <li class="nav-item flex-fill">
                    <a class="nav-link" href="#all" data-toggle="tab">All User</a>
                </li>
                <li class="nav-item flex-fill">
                    <a class="nav-link" href="#requests" data-toggle="tab">Friends Request</a>
                </li>
            </ul>
        </div>

        <div class="card-body tab-content">
            <div class="input-group mb-4">
                <input id="search" class="form-control" type="text" placeholder="Find user by name">
                <div class="input-group-append">
                    <button id="search" class="btn btn-outline-primary" type="button">
                        Find <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>

            <div id="friends" class="tab-pane show active fadeIn" role="tabpanel">
                <h6 class="text-muted">
                    It seems that you did not follow any account yet.
                </h6>
                <h6 class="text-muted">
                    Why not trying following someone?
                </h6>
            </div>

            <div id="all" class="tab-pane fadeIn" role="tabpanel">
                <h6 class="text-muted">
                    Whoops!
                </h6>
                <h6 class="text-muted">
                    This is embarrassing, but it seems like we do not have any account to display.
                </h6>
            </div>

            <div id="requests" class="tab-pane fadeIn" role="tabpanel">
                <h6 class="text-muted">
                    You do not have any pending friend request
                </h6>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block afterMain %}
<div id="feedbackModal" class="modal pulse" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="far fa-times"></i>
                </button>
            </div>

            <div class="modal-body"></div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger btn-block" data-dismiss="modal">
                    Dismiss
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script type="text/javascript" src="./assets/js/friends.js"></script>
{% endblock %}
