<!DOCTYPE html>
{% if pageType == 'fullHeight' %}
<html class="fullHeight" lang="en">
{% else %}
<html lang="en">
{% endif %}
    <head>
        <!-- Change base accordingly -->
        <base href="/">
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="msapplication-TileColor" content="#c8e6f7">
        <meta name="msapplication-config" content="./assets/favicon/browserconfig.xml">
        <meta name="theme-color" content="#c8e6f7">

        {% if title is defined and title is not empty %}
            <title>EcoSplash &middot; {{ title }}</title>
        {% else %}
            <title>EcoSplash</title>
        {% endif %}

        <link rel="apple-touch-icon" sizes="180x180" href="./assets/favicon/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="./assets/favicon/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="./assets/favicon/favicon-16x16.png">
        <link rel="manifest" href="./assets/favicon/site.webmanifest">
        <link rel="mask-icon" href="./assets/favicon/safari-pinned-tab.svg" color="#5bbad5">
        <link rel="shortcut icon" href="./assets/favicon/favicon.ico">

        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i">
        <link rel="stylesheet" type="text/css" href="./assets/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="./assets/css/fontawesome-all.min.css">
        <link rel="stylesheet" type="text/css" href="./assets/css/global.css"/>
        <link rel="stylesheet" type="text/css" href="./assets/css/animation.css"/>
    </head>

    {% if bodyBG is defined%}
    <body style="background-image: url('{{ bodyBG }}');">
    {% else %}
    <body>
    {% endif %}
        <nav class="navbar fixed-top navbar-expand-md navbar-light bg-light shadow-sm py-3">
            <div class="container-fluid mx-auto">
                <a class="navbar-brand" href="./">
                    <div class="brand-logo"></div>
                </a>

                <a class="navbar-toggler collapsed d-block d-md-none d-lg-none d-md-none" data-toggle="collapse" data-target="#navbar">
                    <i class="far fa-bars fa-lg bounceIn"></i>
                    <i class="far fa-times fa-lg bounceIn d-none"></i>
                </a>

                <div class="navbar-collapse collapse justify-content-stretch" id="navbar">
                    <hr class="d-block d-md-none d-lg-none d-md-none" />

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="./">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="./quiz">Daily Quiz</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="./events">Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="./something">Something</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav nav-right ml-auto d-none d-md-block d-lg-block d-xl-block">
                        <li class="nav-item dropdown">
                            <a id="loginDropdown" class="nav-link dropdown-toggle" href="" data-toggle="dropdown" tooltip-toggle="tooltip" data-placement="left" title="Login / Sign Up">
                                <i class="far fa-sign-in-alt fa-lg"></i>
                            </a>

                            <div class="dropdown-menu dropdown-menu-right bounceInShort">
                                <h6 class="dropdown-header">Have an account?</h6>

                                <form id="loginForm" class="px-4 py-2" method="post" novalidate>
                                    <div id="email" class="form-label-group">
                                        <input id="l-email" class="form-control" type="email" placeholder="Email" name="email" required autofocus />
                                        <label for="l-email">Email</label>
                                        <div class="feedback fadeIn"></div>
                                    </div>
                                    <div id="password" class="form-label-group">
                                        <input id="l-password" class="form-control" type="password" placeholder="Password" name="password" required />
                                        <label for="l-password">Password</label>
                                        <div class="feedback fadeIn"></div>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-check">
                                            <input id="remember" class="form-check-input" type="checkbox" name="remember" />
                                            <label class="form-check-label" for="remember">Remember me?</label>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                                </form>

                                <a class="small mx-4 my-2" href="./forgot_password">Forgot password?</a>

                                <hr />

                                <h6 class="dropdown-header">New to EcoSplash?</h6>
                                <div class="mx-4 my-2">
                                    <a class="btn btn-outline-secondary btn-block" href="./signup">Sign Up</a>
                                </div>
                            </div>
                        </li>
                    </ul>

                    <!-- Mobile View -->
                    <div class="m-nav-right">
                        <hr class="d-block d-md-none d-lg-none d-xl-none" />

                        <ul class="navbar-nav d-block d-md-none d-lg-none d-xl-none">
                            <li class="nav-item w-100">
                                <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#loginModal">
                                    Login
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        {% if mainType == "home" %}
        <main class="home container-fluid mt-0 mb-4 mx-auto">
        {% elseif mainType == "vCenter" %}
        <main class="d-flex flex-column justify-content-center px-3 my-4 mx-auto">
        {% else %}
        <main class="container-fluid my-4 mx-auto">
        {% endif %}
            {% block main %}{% endblock %}
        </main>

        {% block afterMain %}{% endblock %}

        <!-- Mobile Login Modal -->
        <div id="loginModal" class="modal pulse" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h6>Already have an account?</h6>

                        <button type="button" class="close" data-dismiss="modal">
                            <i class="far fa-times"></i>
                        </button>
                    </div>

                    <div class="modal-body">
                        <form id="mLoginForm" method="post" novalidate>
                            <div id="email" class="form-label-group">
                                <input id="m-email" class="form-control" type="email" placeholder="Email" name="email" required autofocus />
                                <label for="m-email">Email</label>
                                <div class="feedback fadeIn"></div>
                            </div>
                            <div id="password" class="form-label-group">
                                <input id="m-password" class="form-control" type="password" placeholder="Password" name="password" required />
                                <label for="m-password">Password</label>
                                <div class="feedback fadeIn"></div>
                            </div>
                            <div class="form-group">
                                <div class="form-check">
                                    <input id="m-remember" class="form-check-input" type="checkbox" name="remember" />
                                    <label class="form-check-label" for="m-remember">Remember me?</label>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </form>

                        <a class="small" href="./forgot_password">Forgot password?</a>

                        <hr />

                        <h6>New to EcoSplash?</h6>
                        <a class="btn btn-outline-secondary btn-block" href="./signup">Sign Up</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Login Success Modal -->
        <div id="loginSuccessModal" class="modal pulse" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Logged-in Successfully</h5>

                        <button type="button" class="close" data-dismiss="modal">
                            <i class="far fa-times"></i>
                        </button>
                    </div>

                    <div class="modal-body">
                        Welcome <span class="name"></span>, you have logged-in successfuly
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger btn-block" data-dismiss="modal">Dismiss</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Logout Success Modal -->
        <div id="logoutModal" class="modal pulse" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Logged-out Successfully</h5>

                        <button type="button" class="close" data-dismiss="modal">
                            <i class="far fa-times"></i>
                        </button>
                    </div>

                    <div class="modal-body">
                        You have logged-out your account successfuly.
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger btn-block" data-dismiss="modal">Dismiss</button>
                    </div>
                </div>
            </div>
        </div>

        <footer class="bg-dark shadow-lg">
            <div class="container-fluid py-3">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <a href="./">
                            <img src="./assets/img/logo/ecosplash_white.png" />
                        </a>
                        <p class="small text-white mb-0">
                            Copyright &copy; <span class="year"></span> EcoSplash.
                        </p>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <hr class="d-block d-md-none d-lg-none d-xl-none" />

                        <h5 class="text-white">
                            Connect With Us
                        </h5>
                        <a class="fbLink" href="https://facebook.com">
                            <i class="fab fa-facebook-f fa-lg"></i>
                        </a>
                        <a class="twLink ml-3" href="https://twitter.com">
                            <i class="fab fa-twitter fa-lg"></i>
                        </a>
                        <a class="inLink ml-3" href="https://instagram.com">
                            <i class="fab fa-instagram fa-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
        </footer>

        <div id="fixed-action"></div>

        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script type="text/javascript" src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
        <script type="text/javascript" src="./assets/js/main.js"></script>
        <script type="text/javascript" src="./assets/js/lsfl.js"></script>
        {% block scripts %}{% endblock %}
    </body>
</html>
