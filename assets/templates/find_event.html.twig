{% extends 'base.html.twig' %}
{% set title = 'Find Event Location' %}

{% block main %}
<section id="findEvent">
    <div class="card shadow">
        <div class="card-body">
            <h4 class="text-center pb-4">Find Event Location</h4>
            <p class="feedback small text-danger text-center d-none">
                You did not allow us to know your location, or your browser does supports geolocation.
            </p>

            <div id="findEvent" class="input-group d-flex">
                <input type="text" class="form-control" placeholder="Postal Code">

                <div class="input-group-append">
                    <button class="btn btn-primary" type="button">Find Event</button>
                </div>
            </div>

            <div id="map" class="w-100" style="height: 65vh;"></div>

            <div class="text-right pt-3">
                <button id="zoomMe" class="btn btn-secondary" type="button">Zoom To Me</button>
                <button id="zoomEvent" class="btn btn-danger" type="button">Zoom To Event</button>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block afterMain %}
{% endblock %}

{% block scripts %}
<script type="text/javascript" src="./assets/js/findEvent.js"></script>
{% endblock %}
